[alias]
 amend = commit --amend
 st = status -s -uno
sta = status -s  
 ci = commit
 co = checkout
 who = shortlog -sne
 lg = log --relative-date --abbrev-commit
 lgs = log --relative-date --abbrev-commit --name-only
 lgl = log --relative-date --abbrev-commit --name-status -1
 lgf = log --follow --abbrev-commit




